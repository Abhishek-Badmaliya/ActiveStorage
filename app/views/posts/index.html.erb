<h2 class = "text-center mt-4" >List of Posts</h2><br>
<%= link_to "Add New Post", new_post_path, class:"btn btn-secondary" %><br><br>

<table class = "table table-bordered">
  <thead class = "table-light text-center">
    <tr>
      <th> Post Title </th>
      <th> Post Body </th>
      <th> Action </th>
    </tr>
  </thead>
  <tbody class = "text-center">
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post_title %></td>
        <td><%= post.post_body %></td>
        <div>
          <td>
            <div class="btn-group" role="group">
              <%= link_to 'Show', post_path(post), class: "text-decoration-none btn btn-info" %>
              <%= link_to 'Edit', edit_post_path(post), class: "text-decoration-none btn btn-dark" %>
              <%= button_to 'Delete', post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-danger" %>
            </div>
          </td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>
