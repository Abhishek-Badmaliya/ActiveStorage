<div class = "container" >
  <h2 class = "text-center mt-4" >Create a New Post</h2><br>

  <% if @post.errors.any? %>
    <h4> The following errors prevented the post details from being saved ! </h4>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li class = "text-danger"> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model:@post, local: true, data: {turbo: false}) do |f| %>
    <div class = "field form-group" >
      <strong><%= f.label :post_title %></strong>
      <%= f.text_field :post_title, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <strong><%= f.label :image %></strong>
      <%= f.file_field :image, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <strong><%= f.label :post_body %></strong>
      <%= f.text_area :post_body, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <strong><%= f.label :files %></strong>
      <%= f.file_field :uploads, multiple: true, class:"form-control" %>
    </div><br>

    <div class="text-center">
      <div class = "action" >
        <%= f.submit "Create Post", class:"btn btn-success" %>
      </div>
    </div><br>

    <div class="text-center">
      <div class = "field form-group" >
        <%= link_to 'Dismiss', { controller: 'posts', action: 'index'}, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
  
</div>
